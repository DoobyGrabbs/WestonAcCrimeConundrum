@model WestonAcCrimeConundrum.Models.ViewModels.CrimeClient

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>CrimeClient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Latitude" class="control-label"></label>
                <input asp-for="Latitude" class="form-control" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Longitude" class="control-label"></label>
                <input asp-for="Longitude" class="form-control" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonthYear" class="control-label"></label>
                <input asp-for="MonthYear" class="form-control" />
                <span asp-validation-for="MonthYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@if (Model != null)
{
    <div class="row">
        <div class="col-md-4">
            @foreach (var crimeCategory in Model.CrimeResponseByCategories)
            {
                <div class="row">
                    <div class="col-md-4">
                        @crimeCategory.Category
                    </div>
                    <div class="col-md-4">
                        @crimeCategory.NumCrimes
                    </div>
                </div>
            }
        </div>
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
